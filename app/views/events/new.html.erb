<% provide(:title, 'Create an Event') %>
<h1>Create an Event</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@event) do |f| %>


			<%= f.label "Date and Time" %>
			<%= f.datetime_field :starts_at %>

			<%= f.label "Sport" %>
			<%= f.text_field :type_of %>

			<%= f.label :details %>
			<%= f.text_area :details %>

			<%= f.label :location %>
			<%= f.text_field :location %>

			<%= f.submit "Create my Event", class: "btn btn-large btn-primary" %>
		<%end%>
	</div>
</div>

